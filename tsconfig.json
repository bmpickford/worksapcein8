{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["packages"],
  "exclude": ["node_modules", "dist", "./**/*.test.js", "./**/*.d.ts"],
  "typedocOptions": {
    "entryPoints": [
      "packages/element/index.js",
      "packages/names/index.js",
      "packages/functions/index.js"
    ],
    "out": "docs",
    "emit": "both"
  }
}
